<div class="container">
	<img src="<%= '/' + @artist.wallpaper %>" class="artist-wallpaper">
	<h2><%= @artist.name %></h2>
	<p><%= @artist.bio %></p>
	<div class="row albums"><h3>Albums</h3></div>
	<div class="row albums-list">
		<ul>
			<% @artist.albums.each do |album| %>
				<li><img src="<%= '/' + album.cover %>" class="album-cover"> <%= link_to(album.title, artist_album_path(@artist, album)) %> (<%= album.year %>)</li>
			<% end %>
		</ul>
	</div>

	<h5><%= link_to('Home', '/') %></h5>
</div>