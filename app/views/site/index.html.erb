<div class="container main-container">
	<div class="row">
		<div class="col-md-12 st-title" hidden>
			<b>Soundtracking</b>
		</div>
	</div>
    <%= render "tagcloud" %>
	<div class="row add-bottons">
		<div class="col-md-3 add-movie">
			<%= link_to('Add new movie', new_movie_path) %>
		</div>
		<div class="col-md-3 add-song">
			<button class="btn btn-lg"><%= link_to('Add new song', '/') %></button>
		</div>
		<div class="col-md-3 add-artist">
			<button class="btn btn-lg"><%= link_to('Add new artist', new_artist_path) %></button>
		</div>
		<div class="col-md-3 add-album">
			<button class="btn btn-lg"><%= link_to('Add new album', '/') %></button>
		</div>
	</div>
	<div class="row last-items-bar">
		<div class="col-md-3 last-added-items">
			<h4>Last added movies.</h4>
			<ul><% @movies.each do |movie| %>
				<li>
					<a><%= link_to(movie.title, movie_path(movie)) %>
					(<%= movie.year %>)</a>
				</li>
			<% end %>
			</ul>
		</div>
		<div class="col-md-3 last-added-items">
			<h4>Last added songs.</h4>
			<ul><% @songs.each do |song| %>
				<li>
					<a><%= song.title %> - <%= song.album.artist.name %></a>
				</li>
			<% end %>
			</ul>
		</div>
		<div class="col-md-3 last-added-items">
			<h4>Last added artists.</h4>
			<ul><% @artists.each do |artist| %>
				<li>
					<a><%= link_to(artist.name, artist_path(artist)) %></a>
				</li>
			<% end %>
			</ul>
		</div>
		<div class="col-md-3 last-added-items">
			<h4>Last added albums.</h4>
			<ul><% @albums.each do |album| %>
				<li>
					<a><%= album.title %>
					(<%= album.year %>)</a>
				</li>
			<% end %>
			</ul>
		</div>
	</div>
</div>